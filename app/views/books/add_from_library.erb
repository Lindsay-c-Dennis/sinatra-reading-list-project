<h3>Add an Existing Book From the Library to Your Reading List</h1>

<form action="/books/add" method="POST">
	<% Book.all.each do |book| %>
	  <input id="<%=book.id%>" type="radio" name="book[id]" value="<%=book.id%>">
	  <label for="<%=book.id%>"><%=book.title%> by <%=book.author.name%></label>
	  <br>
	<% end %>
	<br>
	<input type="submit" name="Add Book">  
</form>

<h3>Or, <a href="/books/new">click here</a> to add a new book</h3>

